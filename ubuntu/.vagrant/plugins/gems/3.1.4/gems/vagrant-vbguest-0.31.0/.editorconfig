root = true

[*]
end_of_line = lf
charset = utf-8

[{*.rb,Gemfile,Vagrantfile}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[VERSION]
insert_final_newline = true
