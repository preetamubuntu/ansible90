# {{ ansible_managed }}
<VirtualHost *:80>
    ServerAdmin webmaster@{{ ansible_facts['fqdn'] }}
    ServerName {{ ansible_facts['fqdn'] }}
    DocumentRoot /www/docs/{{ ansible_facts['fqdn'] }}
    <Directory /www/docs/{{ ansible_facts['fqdn'] }} >
        Require all granted
        AllowOverride None
    </Directory>
    ErrorLog logs/{{ ansible_facts['fqdn'] }}-error_logs
    CustomLog logs/{{ ansible_facts['fqdn'] }}-access_logs common
</VirtualHost>

